[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[user]
	name = Masa Mark Fukui
	email = masahiro.m.fukui@gmail.com

[pull]
	ff = only

[core]
	excludesfile = /Users/masa/.gitignore_global
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
side-by-side = true 
line-numbers = true
navigate = true
light = false

[alias]
    lp = log -p
    ll = log --oneline
    new = checkout -b
    ri = rebase -i
    st = status
    cm = commit -m
